/**send.wxss**/
@import "icon.wxss";
page{
  background: #eee;
}
.section{
    margin-top:15px; 
    line-height: 24px;
    background: #fff;
    font-size: 14px;
    padding: 15px;
}
.section .content{
  /* border-bottom: 1px solid #d9d9d9;  */
  position:relative;
  display:flex;
  align-items:center;
}

.f18 {
  font-size: 18px;
  line-height: 18px; 
}
.f24 {
  font-size: 24px;
  line-height: 24px; 
}
.f30 {
  font-size: 30px;
  line-height: 30px; 
}
.f55 {
  font-size: 55px;
  line-height: 55px; 
}
.f-white{
  color: #ffffff;
}
.f-red{
  color: #ef4f4f;
}
.f-orange{
  color: #FF6600;
}
.f-blue{
  color: #5677fc;
}
.b-blue{
  background: #5677fc !important;
}
.weui_cell_primary{
  flex:1
}
.weui_cell_bd{
  display: inline-block;
}
.weui_cell_bd text{
  display: block;
  line-height: 20px;
  padding-left: 10px;
  color: #ccc;
}
.weui_cell_bd text:first-child{
  color: #000;
}
.checkbox{
  margin: 0 10px;
}
.checkbox:last-child{
  margin: 0;
}
.io{
  padding-bottom:8px; 
  overflow: hidden;
  clear: both;
}
.text{
  margin: 8px 0 20px 0;
}
.textarea{
  border: 1px #ccc solid;
  width: 100%;
  height: 100px;
  padding: 2px;
  box-sizing: border-box;
  font-size: 12px;
}

/*按钮*/
.weui_btn_area{
  text-align: right;
}
.weui_btn_area a{
  display: inline-block;
}
.weui_btn_area a:first-child{
  margin-right: 20px;
}
.weui_btn{
  position:relative;
  display:block;
  margin-left:auto;
  margin-right:auto;
  padding-left:14px;
  padding-right:14px;
  box-sizing:border-box;
  font-size:18px;
  text-align:center;
  text-decoration:none;
  color:#fff;
  line-height:2.33333333;
  border-radius:5px;
  -webkit-tap-highlight-color:rgba(0,0,0,0);
  overflow:hidden;
  background-color:#04be02;
}
.weui_btn_mini{
  line-height:2;
  font-size:14px;
  padding:0 1.85em;
  display:inline-block;
}
checkbox-group{
  display: inline-block;
}